<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">Edit <%=skatepark.name%></h1>
	<div class="row-12" style="width: 30%; margin: 25px auto;">
	<form action="/skateparks/<%=skatepark._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="skatepark[name]" value="<%=skatepark.name%>">
		</div>
		
		<div class="form-group">
		<input class="form-control" type="text" name="skatepark[image]" value="<%=skatepark.image%>">
		</div>	
		
		<div class="form-group">
		<textarea class="form-control" id="exampleFormControlTextarea1" name="skatepark[description]" rows="2" value="<%=skatepark.description%>"></textarea>
		</div>	
		
		<div class="form-group">	
		<button class="btn btn-lg btn-primary btn-block">Submit!</button>
		</div>
		
		<div class="form-group">	
		<button class="btn btn-lg btn-primary btn-block"><a class=button-back href="/skateparks">View All Skateparks</a></button>
		</div>
	</form>
	</div>
</div>

<%- include("../partials/footer") %>
